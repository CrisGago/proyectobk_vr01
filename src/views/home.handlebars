  <section class="featured-products">
    <h2 class="text-center">Destacados</h2>
    {{#if products}}
    <div class="row">
      {{#each products}}
      <div class="col-md-4">
        <div class="product">
          {{#if thumbnails}}
          <img src="/img/{{thumbnails}}" alt="{{title}}" class="img-fluid" />
          {{else}}
          <img src="/img/logo3d.webp" alt="Imagen no disponible" class="img-fluid" />
          {{/if}}
          <h3 class="mt-3">{{title}}</h3>
          <p>${{price}}</p>
          <a href="/products/item/{{_id}}" class="btn btn-dark mt-2">Comprar</a>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <h1 class="text-center mt-5">No hay propiedades</h1>
    {{/if}}
  </section>
</div>

